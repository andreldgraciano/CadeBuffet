<% if @orders.any? %>
  <div style="display: flex; gap: 2rem; flex-wrap: wrap">
    <% @orders.sort_by { |order| [
        order.status == 'Aguardando avaliação do buffet' ? 0 :
        (order.status == 'Pedido aceito pelo buffet' ? 1 :
        (order.status == 'Pedido confirmado pelo cliente' ? 2 :
        (order.status == 'Pedido cancelado' ? 3 : 4))), order.created_at] }.each do |order| %>
      <section>
        <h1><%= link_to "Pedido #{order.code}", order_path(order) %></h1>
        <p>dia do evento: <%= order.event_day %></p>
      </section>
    <% end %>
  </div>
<% else %>
  <p>Não existem pedidos cadastrados.</p>
<% end %>
